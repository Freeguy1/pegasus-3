<view frame="fill_parent" backgroundColor="white">

	<linearlayout origin="{5%,5%}" size="{90%, 90%}" orientation="horizontal" padding="5%" backgroundColor="blue">
		<label size="{30%,30%}" text="Green" textAlignment="center" backgroundColor="green" />
		<label size="{30%,30%}" text="Red" textAlignment="center" backgroundColor="red" />
		<label size="{30%,30%}" text="Orange" textAlignment="center" backgroundColor="orange" />
	</linearlayout>
	
	<label frame="{{25%,33%}, {50%,30%}}" text="White" textAlignment="center" backgroundColor="white" />
</view>